#! /usr/bin/env sh

# ------------------------------------------------------------------------
# Detect Solaris
# ------------------------------------------------------------------------

unset SUNOS
if [ "UNAME" = "SunOS" ]; then SUNOS=true; POSIX=true; fi

# ------------------------------------------------------------------------
# Set compile flags
# ------------------------------------------------------------------------

if [ -n "$SUNOS" ]; then
    COMP_FLAGS="-DNO_PREFETCH"
fi

# ------------------------------------------------------------------------
# Create Makevars file
# ------------------------------------------------------------------------

cat src/Makevars.in | sed "s/@COMP_FLAGS@/${COMP_FLAGS}/" > src/Makevars
